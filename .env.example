# Environment variables for Writigo

# Database Configuration
DATABASE_URL=sqlite:///./writigo.db
# For PostgreSQL: postgresql://username:password@localhost/writigo

# Redis Configuration (for vector storage)
REDIS_URL=redis://localhost:6379

# Vector Database
VECTOR_DB_TYPE=faiss  # Options: faiss, pinecone, weaviate
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here

# LLM Configuration (Optional)
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Local LLM Settings
LOCAL_LLM_MODEL=llama2-7b-chat
LOCAL_LLM_ENDPOINT=http://localhost:11434

# API Configuration
API_HOST=localhost
API_PORT=8000
API_SECRET_KEY=your_secret_key_here_change_in_production

# File Watcher Configuration
VAULT_PATH=./vaults
WATCH_EXTENSIONS=.md,.txt,.pdf
DEBOUNCE_SECONDS=2

# Collaboration Settings
ENABLE_REALTIME_SYNC=true
YJS_WEBSOCKET_PORT=1234

# Security
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Logging
LOG_LEVEL=INFO
LOG_FILE=writigo.log

# Development
DEBUG=true
DEVELOPMENT_MODE=true
